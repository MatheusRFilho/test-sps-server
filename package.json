{
  "name": "test-sps-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc && npm run copy:templates",
    "copy:templates": "node scripts/copy-templates.js",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "migrate": "ts-node src/scripts/migrate.ts",
    "migrate:run": "ts-node src/scripts/migrate.ts run",
    "migrate:rollback": "ts-node src/scripts/migrate.ts rollback",
    "migrate:status": "ts-node src/scripts/migrate.ts status",
    "test": "jest --verbose",
    "test:unit": "jest --testPathPatterns=tests/unit --verbose",
    "test:e2e": "jest --testPathPatterns=tests/e2e --verbose",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --verbose --coverage --watchAll=false --maxWorkers=2",
    "test:unit:ci": "jest --testPathPatterns=tests/unit --verbose --coverage --watchAll=false",
    "test:e2e:ci": "jest --testPathPatterns=tests/e2e --verbose --watchAll=false --maxWorkers=1",
    "lint": "echo 'Linter n√£o configurado'",
    "type-check": "npx tsc --noEmit",
    "validate:i18n": "node scripts/validate-i18n.js",
    "health-check": "node scripts/health-check.js",
    "ci:full": "npm run validate:i18n && npm run type-check && npm run test:ci && npm run build"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "handlebars": "^4.7.8",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/handlebars": "^4.0.40",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.10",
    "@types/nodemailer": "^7.0.9",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
